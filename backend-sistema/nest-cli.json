{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/backend-sistema/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/backend-sistema/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/backend-sistema",
  "projects": {
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "backend-sistema": {
      "type": "application",
      "root": "apps/backend-sistema",
      "entryFile": "main",
      "sourceRoot": "apps/backend-sistema/src",
      "compilerOptions": {
        "tsConfigPath": "apps/backend-sistema/tsconfig.app.json"
      }
    },
    "core-service": {
      "type": "application",
      "root": "apps/core-service",
      "entryFile": "main",
      "sourceRoot": "apps/core-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/core-service/tsconfig.app.json"
      }
    },
    "reporting-service": {
      "type": "application",
      "root": "apps/reporting-service",
      "entryFile": "main",
      "sourceRoot": "apps/reporting-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/reporting-service/tsconfig.app.json"
      }
    }
  }
}